{
  "name": "drawgaiden-socket-server",
  "version": "1.0.0",
  "description": "Real time collaborative drawing canvas.",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run build && npm run watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run watch:serve\"",
    "watch:ts": "tsc -w",
    "watch:serve": "nodemon --config=nodemon.json dist/server/src/socket/index.js",
    "build": "tsc",
    "serve": "node dist/server/src/socket/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cschram/drawgaiden.git"
  },
  "author": "Corey Schram <coreyschram@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cschram/drawgaiden/issues"
  },
  "homepage": "https://github.com/cschram/drawgaiden#readme",
  "dependencies": {
    "@types/cuid": "^1.3.0",
    "@types/hapi": "^16.1.2",
    "@types/minimist": "^1.2.0",
    "@types/rethinkdb": "^2.3.2",
    "@types/socket.io": "^1.4.29",
    "@types/winston": "^2.3.2",
    "cuid": "^1.3.8",
    "hapi": "^16.1.1",
    "minimist": "^1.2.0",
    "rethinkdb": "^2.3.3",
    "socket.io": "^2.0.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "nodemon": "^1.11.0",
    "typescript": "^2.3.3"
  }
}
