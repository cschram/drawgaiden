{
  "name": "drawgaiden-socket-server",
  "version": "0.6.0",
  "description": "Real time collaborative drawing canvas.",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run build && npm run watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Socket,ID-Gen,Janitor\" -c \"cyan.bold,green.bold,green.bold,purple.bold\" \"npm run watch:ts\" \"npm run watch:socket\" \"npm run watch:id-gen\" \"npm run watch:janitor\"",
    "watch:ts": "tsc -w",
    "watch:socket": "nodemon dist/server/src/socket/index.js",
    "watch:id-gen": "nodemon dist/server/src/id-gen/index.js",
    "watch:janitor": "nodemon dist/server/src/janitor/index.js",
    "build": "tsc",
    "serve:socket": "node dist/server/src/socket/index.js",
    "serve:id-gen": "node/dist/server/src/id-gen/index.js",
    "serve:janitor": "node dist/server/src/janitor/index.js",
    "serve": "concurrently -k -p \"[{name}]\" -n \"Socket,ID-Gen,Janitor\" -c \"cyan.bold,green.bold,green.bold,purple.bold\" \"npm run serve:socket\" \"npm run serve:id-gen\" \"npm run serve:janitor\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cschram/drawgaiden.git"
  },
  "author": "Corey Schram <coreyschram@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cschram/drawgaiden/issues"
  },
  "homepage": "https://github.com/cschram/drawgaiden#readme",
  "dependencies": {
    "@types/cuid": "^1.3.0",
    "@types/hapi": "^16.1.2",
    "@types/minimist": "^1.2.0",
    "@types/rethinkdb": "^2.3.2",
    "@types/socket.io": "^1.4.29",
    "@types/winston": "^2.3.2",
    "canvas": "^1.6.5",
    "cuid": "^1.3.8",
    "dnode": "^1.2.2",
    "hapi": "^16.1.1",
    "minimist": "^1.2.0",
    "rethinkdb": "^2.3.3",
    "simplify-js": "^1.2.1",
    "socket.io": "^2.0.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "nodemon": "^1.11.0",
    "typescript": "^2.3.3"
  }
}
