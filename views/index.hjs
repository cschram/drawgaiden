<!DOCTYPE html>
<html>
<head>

	<title>Get Up And Draw Gaiden: 2, Shut Up And Sketch, Episode 1 of the Draw SaGa</title>

	<!--[if IE]><script src="js/contrib/excanvas/excanvas.js"></script><![endif]-->

	<link rel="stylesheet" href="/css/normalize.css">
	<link rel="stylesheet" href="/css/formalize.css">
	<link rel="stylesheet" href="/js/contrib/spectrum/spectrum.css">
	<link rel="stylesheet" href="/css/style.css">

</head>
<body>

	<header class="cf">
		<!-- Toolbar -->
		<div id="tools" hidden>
			<!-- Tool Select -->
			<span class="tool">
				<input type="radio" name="tool" id="tool_pencil" value="pencil" checked="checked">
				<label for="tool_pencil">Pencil</label>
			</span>
			<span class="tool">
				<input type="radio" name="tool" id="tool_rectangle" value="rectangle">
				<label for="tool_rectangle">Rectangle</label>
			</span>
			<span class="tool">
				<input type="radio" name="tool" id="tool_circle" value="circle">
				<label for="tool_circle">Circle</label>
			</span>
			<span class="tool">
				<input type="radio" name="tool" id="tool_eraser" value="eraser">
				<label for="tool_eraser">Eraser</label>
			</span>

			<!-- Color Options -->
			<span class="colors">
				<input type="color" name="stroke-color" value="#000000">
				<input type="color" name="fill-color" value="#ffffff">
			</span>

			<!-- Tool Size Slider -->
			<input type="range" name="size" min="1" max="25" value="1">
		</div>

		<!-- Action Menu -->
		<div id="actions" hidden>
			<button name="clear">Clear</button>
			<button name="save">Save</button>
		</div>
	</header>

	<!-- Login Form -->
	<form id="user-login">
		<label for="name">Hey, so, enter your username:</label>
		<input type="text" name="name">
		<input type="submit" value="Start Drawing">
		<p class="error"></p>
	</form>

	<!-- Canvases -->
	<div id="canvases" class="tool-pencil" style="width:{{canvasWidth}}px; height:{{canvasHeight}}px;" hidden>
		<!-- Canvas Layers -->
		<div id="layers">
			<div class="layer">
				<canvas class="canvas-final" width="{{canvasWidth}}" height="{{canvasHeight}}"></canvas>
				<canvas class="canvas-draft" width="{{canvasWidth}}" height="{{canvasHeight}}"></canvas>
			</div>
		</div>

		<!-- User Cursor Display -->
		<canvas id="user-canvas" width="{{canvasWidth}}" height="{{canvasHeight}}"></canvas>
	</div>

	<!-- Base Dependencies -->
	<script src="/js/contrib/es5-shim/es5-shim.js"></script>
	<script src="/js/contrib/es5-shim/es5-sham.js"></script>
	<script src="/js/contrib/jquery/jquery.js"></script>

	<!-- jQuery Plugins -->
	<script src="/js/contrib/formalize/jquery.formalize.js"></script>
	<script src="/js/contrib/spectrum/spectrum.js"></script>
	<script src="/js/contrib/html5slider/html5slider.js"></script>

	<!-- App -->
	<script data-main="/js/main" src="/js/contrib/requirejs/require.js"></script>

</body>
</html>