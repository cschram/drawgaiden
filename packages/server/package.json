{
  "name": "@drawgaiden/server",
  "version": "1.0.0",
  "private": true,
  "description": "Real time collaborative drawing canvas.",
  "main": "src/index.ts",
  "scripts": {
    "start": "npm run build && npm run watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Server\" -c \"green.bold,purple.bold\" \"npm run watch:ts\" \"npm run watch:server\"",
    "watch:ts": "tsc -w",
    "watch:server": "CONFIG_FILE=config/dev.config.json nodemon dist/socket/index.js",
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "echo \"No server tests.\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cschram/drawgaiden.git"
  },
  "author": "Corey Schram <coreyschram@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cschram/drawgaiden/issues"
  },
  "homepage": "https://github.com/cschram/drawgaiden#readme",
  "dependencies": {
    "@drawgaiden/common": "^1.0.0",
    "@drawgaiden/easel": "^1.0.0",
    "@types/cuid": "^1.3.0",
    "@types/hapi": "^16.1.9",
    "@types/minimist": "^1.2.0",
    "@types/redis": "^2.8.2",
    "@types/rethinkdb": "^2.3.2",
    "@types/socket.io": "^1.4.29",
    "@types/socket.io-redis": "^1.0.22",
    "@types/winston": "^2.3.2",
    "canvas": "^1.6.5",
    "cuid": "^1.3.8",
    "hapi": "^16.6.2",
    "minimist": "^1.2.0",
    "redis": "^2.8.0",
    "rethinkdb": "^2.3.3",
    "simplify-js": "^1.2.1",
    "socket.io": "^2.0.1",
    "socket.io-redis": "^5.2.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "nodemon": "^1.11.0",
    "typescript": "^2.3.3"
  }
}
